pipeline {
    agent {
        label 'windows' // Make sure your Jenkins agent is labeled accordingly
    }

    tools {
        dotnet 'dotnet-8.0' // Ensure this is configured in Global Tool Configuration
    }

    environment {
        DOTNET_CLI_TELEMETRY_OPTOUT = '1'
    }

    triggers {
        pollSCM('* * * * *') // Optional: poll for changes every minute
    }

    options {
        skipDefaultCheckout(true)
    }

    stages {
        stage('Checkout') {
            when {
                branch 'main'
            }
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            when {
                branch 'main'
            }
            steps {
                bat 'dotnet restore'
                bat 'dotnet build --no-restore'
                bat 'dotnet test --no-build --verbosity normal'
            }
        }
    }
}
